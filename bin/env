#!/bin/bash

source $ENVIRONMENT_DIR/src/fonts/set-font.sh
source $ENVIRONMENT_DIR/src/themes/set-theme.sh

# Display help for the main script
function show_help() {
  echo "Usage: $0 [COMMAND] [OPTIONS]"
  echo "Commands:"
  echo "  update               Get updates if there are any"
  echo "  font                 Font management (use 'font help' for details)"
  echo "  theme                Theme management (use 'theme help' for details)"
  echo "  help                 Show this help message"
}

# Main script logic
if [[ "$#" -lt 1 ]]; then
  show_help
  exit 1
fi

command="$1"
shift

case "$command" in
  update)
    $ENVIRONMENT_DIR/bin/update.sh
    ;;
  font)
    $ENVIRONMENT_DIR/bin/font.sh "$@"
    ;;
  theme)
    $ENVIRONMENT_DIR/bin/theme.sh "$@"
    ;;
  help)
    show_help
    ;;
  *)
    echo "Error: Unknown command '$command'."
    show_help
    exit 1
    ;;
esac
